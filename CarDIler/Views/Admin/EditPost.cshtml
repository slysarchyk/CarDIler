@model CarDIler.ViewModel.EditPostViewModel
@{
    ViewBag.Title = "EditPost";
}

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay innerpage" style="background-image: url('@Url.Content(Model.EditPosts.CoverPath)')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Car Blog</h1>
                    <p>Welcome to personal blog</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Edit this post</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mb-5">
                <form asp-action="EditPost" asp-route-editposts.Id="@Model.EditPosts.Id" asp-controller="admin" method="post">
                    <div class="form-group row">
                        <div class="col-md-6 mb-4 mb-lg-0">
                            <input asp-for="EditPosts.Name" type="text" class="form-control" placeholder="Name">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea asp-for="EditPosts.ShortDesc" type="text" class="form-control" placeholder="Description" cols="10" rows="10"></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea asp-for="EditPosts.Desc" type="text" class="form-control" placeholder="Post text" cols="40" rows="10"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <input type="submit" class="btn btn-block btn-success text-white py-3 px-5" value="Edit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
