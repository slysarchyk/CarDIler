@model CarDIler.ViewModel.EditCarViewModel
@{
    ViewBag.Title = "Edit Car";
}

<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('@Url.Content(Model.EditCars.Path)')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Edit Car</h1>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5">
                <form asp-action="EditCar" asp-route-editcars.Id="@Model.EditCars.Id" asp-controller="Admin" method="post">
                    <div class="custom-control custom-switch">
                        <input asp-for="@Model.EditCars.Sold" type="checkbox" value="true" class="custom-control-input" id="customSwitch1">
                        <label asp-for="@Model.EditCars.Sold" class="custom-control-label" for="customSwitch1">For Sale / Sold</label>
                    </div><hr />
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="@Model.EditCars.Name" class="control-label">Name of the car</label>
                            <input asp-for="@Model.EditCars.Name" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.EditCars.Engine" class="control-label">Engine</label>
                            <input asp-for="@Model.EditCars.Engine" type="number" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.EditCars.Distance" class="control-label">Distance</label>
                            <input asp-for="@Model.EditCars.Distance" type="number" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.EditCars.PriceNetto" class="control-label">Price Netto</label>
                            <input asp-for="@Model.EditCars.PriceNetto" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.EditCars.Vin" class="control-label">Vin code</label>
                            <input asp-for="@Model.EditCars.Vin" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="@Model.EditCars.Color" class="control-label">Color</label>
                            <input asp-for="@Model.EditCars.Color" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label asp-for="@Model.EditCars.Desc" class="control-label">Detal description of the car</label>
                            <textarea asp-for="@Model.EditCars.Desc" type="date" class="form-control" placeholder="" cols="30" rows="10" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <input type="submit" class="btn btn-block btn-success text-white py-3 px-5" value="Edit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>