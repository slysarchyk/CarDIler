@model CarDIler.ViewModel.AddBlogPostViewModel
@{
    ViewData["Title"] = "Add Post";
}

    <div class="modal-content">
        <div class="modal-header">
            <h4 class="lead">Add new post in Blog</h4>
            <button class="close" data-dismiss="modal" area-hidden="true"><img src="~/svg/error.svg" width="20" height="20" /></button>
        </div>
        <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <form asp-action="AddPost" asp-controller="admin" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-md-6 mb-4 mb-lg-0">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6 mb-4 mb-lg-0">
                                        <label class="control-label">Cover photo</label>
                                        <input type="file" name="cover" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <textarea asp-for="ShortDesc" class="form-control" placeholder="Description" rows="3"></textarea>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <textarea asp-for="Desc" class="form-control" placeholder="Post text" rows="15"></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6 mr-auto">
                                        <input type="submit" class="btn btn-block btn-success text-white py-3 px-5" value="Add">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
    </div>
