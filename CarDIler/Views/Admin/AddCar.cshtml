@using CarDIler.Data.Models.Car
@using Microsoft.EntityFrameworkCore
@model CarDIler.ViewModel.AddCarViewModel
@inject SqlContext SqlContext
@{
    ViewData["Title"] = "Add car";

    var brands = await SqlContext.Brands.ToListAsync();
    var brandsSelectList = brands.Select(b => new SelectListItem(b.BrandName, b.Id.ToString()));

    var categorysSelectList = Html.GetEnumSelectList<Category>();
    var fuelSelectList = Html.GetEnumSelectList<Fuel>();
}


<div class="ftco-blocks-cover-1">
    <div class="ftco-cover-1 overlay" style="background-image: url('/images/rolls_royce.jpg')">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 text-center">
                    <h1>Add car</h1>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5">
                <form asp-action="AddCar" asp-controller="Admin" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label asp-for="Name" class="control-label">Name of the car</label>
                            <input asp-for="Name" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Year" class="control-label">Year</label>
                            <input asp-for="Year" type="number" min="1900" max="2100" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Engine" class="control-label">Engine</label>
                            <input asp-for="Engine" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Distance" class="control-label">Distance</label>
                            <input asp-for="Distance" type="number" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PriceNetto" class="control-label">Price Netto</label>
                            <input asp-for="PriceNetto" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="BrandId" class="control-label">Brand</label>
                            <select type="text" class="form-control" asp-for="BrandId" asp-items="@brandsSelectList">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Category" class="control-label">Category</label>
                            <select class="form-control" asp-for="Category" asp-items="@categorysSelectList">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Fuel" class="control-label">Fuel</label>
                            <select type="text" class="form-control" asp-for="Fuel" asp-items="@fuelSelectList">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Vin" class="control-label">Vin code</label>
                            <input asp-for="Vin" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Color" class="control-label">Color</label>
                            <input asp-for="Color" type="text" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Cover photo</label>
                            <input type="file" name="cover" required />
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Galery</label>
                            <input type="file" name="uploads" multiple required />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea asp-for="Desc"
                                      type="date"
                                      class="form-control"
                                      placeholder="Detal description of the car"
                                      cols="30" rows="10"> 
                            </textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mr-auto">
                            <input type="submit" class="btn btn-block btn-success text-white py-3 px-5" value="Add">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
