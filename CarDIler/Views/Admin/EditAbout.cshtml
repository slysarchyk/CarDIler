@model CarDIler.ViewModel.EditAboutViewModel
@{
    ViewData["Title"] = "Edit About";
}

    <div class="ftco-blocks-cover-1">
        <div class="ftco-cover-1 overlay innerpage" style="background-image: url('/images/rolls_royce.jpg')">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-lg-6 text-center">
                        <h1>Edit About</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-light" id="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mb-5">
                    <form asp-action="EditAbout" asp-controller="Admin" asp-route-abouts.Id="@Model.Abouts.Id" method="post">

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Abouts.Info_1">About</label>
                                <textarea asp-for="Abouts.Info_1" type="text" class="form-control" cols="70" rows="5"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Abouts.Info_2">Car Company</label>
                                <textarea asp-for="Abouts.Info_2" type="text" class="form-control" cols="70" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Abouts.Info_3">Meet Our Team</label>
                                <textarea asp-for="Abouts.Info_3" type="text" class="form-control" cols="70" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Abouts.Info_4">Our History</label>
                                <textarea asp-for="Abouts.Info_4" type="text" class="form-control" cols="70" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6 mr-auto">
                                <input type="submit" class="btn btn-block btn-success text-white py-3 px-5" value="Edit About">
                            </div>
                        </div>

                    </form>
                    
                </div>
            </div>
        </div>
    </div>
