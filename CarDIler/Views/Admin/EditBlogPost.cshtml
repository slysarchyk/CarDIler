@model CarDIler.ViewModel.EditBlogPostViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="lead">Edit post</h4>
        <button class="close" data-dismiss="modal" area-hidden="true"><img src="~/svg/error.svg" width="20" height="20" /></button>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="EditBlogPost" asp-route-editposts.Id="Id" asp-controller="admin" method="post">
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <label asp-for="Name" class="control-label">Name</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="ShortDesc" class="control-label">Short description</label>
                                <textarea asp-for="ShortDesc" type="text" class="form-control" placeholder="Short description" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Desc" class="control-label">Full description</label>
                                <textarea asp-for="Desc" type="text" class="form-control" placeholder="Full description" rows="15"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mr-auto">
                                <input type="submit" class="btn btn-block btn-success text-white py-3 px-5" value="Edit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>